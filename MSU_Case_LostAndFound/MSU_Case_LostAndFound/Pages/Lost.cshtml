@page
@model LostModel
@{
    ViewData["Title"] = "Dyr som er savnet";
}

<h1>@ViewData["Title"]</h1>

<br />
<h2 class="text-info">Create New Book</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Animal.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Animal.Name" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Animal.Sex"></label>
            </div>
            <div class="col-6">
                <input asp-for="Animal.Sex" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="AnimalList" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>   